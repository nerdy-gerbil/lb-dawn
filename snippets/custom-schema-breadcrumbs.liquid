<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "name": "{{ page_title }}",
    "itemListElement": [{
      "@type": "ListItem",
      "position": 1,
      "item": {
          "@id": "{{ shop.url }}",
          "name": "Home"
      }
    }{% if template != 'index' %},
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        {% if template contains 'product' and collection %}
        "@id": "{{ shop.url }}{{ collection.url }}",
        "name": "{{ collection.title | escape }}"
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        {% elsif template contains 'article' %}
        "@id": "{{ shop.url }}/default-blog",
        "name": "Blog"
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        {% endif %}
        "@id": "{{ canonical_url }}",
        "name": "{{ page_title | escape }}"
      }
    }{% endif %}]
  }
</script>
