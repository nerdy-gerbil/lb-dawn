{% doc %}
  @prompt
    curved rectangular buttons that include only text. they will link through to pages on the website. there will be 4 buttons and they will be placed horizontally 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-button-group-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-button-group__container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.button_spacing }}px;
    flex-wrap: wrap;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-button-group__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .ai-button-group__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-button-group__container-{{ ai_gen_id }} {
      gap: {{ block.settings.button_spacing | times: 0.8 }}px;
    }

    .ai-button-group__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<horizontal-button-group-{{ ai_gen_id }} class="ai-button-group-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-button-group__container-{{ ai_gen_id }}">
    {% if block.settings.button_1_text != blank %}
      <a
        href="{{ block.settings.button_1_link }}"
        class="ai-button-group__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_1_text }}
      </a>
    {% endif %}

    {% if block.settings.button_2_text != blank %}
      <a
        href="{{ block.settings.button_2_link }}"
        class="ai-button-group__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_2_text }}
      </a>
    {% endif %}

    {% if block.settings.button_3_text != blank %}
      <a
        href="{{ block.settings.button_3_link }}"
        class="ai-button-group__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_3_text }}
      </a>
    {% endif %}

    {% if block.settings.button_4_text != blank %}
      <a
        href="{{ block.settings.button_4_link }}"
        class="ai-button-group__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_4_text }}
      </a>
    {% endif %}
  </div>
</horizontal-button-group-{{ ai_gen_id }}>

<script>
  (function() {
    class HorizontalButtonGroup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('horizontal-button-group-{{ ai_gen_id }}', HorizontalButtonGroup{{ ai_gen_id }});
  })();
</script>

