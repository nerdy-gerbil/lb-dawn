{% doc %}
  @prompt
    a title with shoppable buttons underneath
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shoppable-title-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-shoppable-title-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-shoppable-title-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.spacing_below_title }}px;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    line-height: 1.2;
  }

  .ai-shoppable-title-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.button_spacing }}px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-shoppable-title-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-shoppable-title-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-shoppable-title-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-shoppable-title-button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_font_size }}px * 0.9);
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-shoppable-title-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shoppable-title-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-shoppable-title-heading-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    <div class="ai-shoppable-title-buttons-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign button_text_key = 'button_' | append: i | append: '_text'
          assign button_link_key = 'button_' | append: i | append: '_link'
          assign button_text = block.settings[button_text_key]
          assign button_link = block.settings[button_link_key]
        %}

        {% if button_text != blank and button_link != blank %}
          <a href="{{ button_link }}" class="ai-shoppable-title-button-{{ ai_gen_id }}">
            {{ button_text }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

